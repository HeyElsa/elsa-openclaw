# Required: Private key for x402 micropayments
PAYMENT_PRIVATE_KEY=0x...

# Optional: Elsa API URL (default: https://x402.heyelsa.ai)
# ELSA_API_URL=https://x402.heyelsa.ai

# Optional: Base RPC URL for payment transactions
# BASE_RPC_URL=https://mainnet.base.org

# Optional: Budget controls
# ELSA_MAX_USD_PER_CALL=0.05
# ELSA_MAX_USD_PER_DAY=2.00
# ELSA_MAX_CALLS_PER_MINUTE=30
# ELSA_TZ=UTC

# Optional: Confirmation token TTL in seconds
# ELSA_CONFIRMATION_TTL_SECONDS=600

# Optional: Enable execution tools (required for actual swaps)
# ELSA_ENABLE_EXECUTION_TOOLS=false

# Optional: Require confirmation tokens for swaps
# ELSA_REQUIRE_CONFIRMATION_TOKEN=true

# Optional: Audit log path
# ELSA_AUDIT_LOG_PATH=./logs/audit.log

# Optional: Log level (debug, info, warn, error)
# LOG_LEVEL=info
